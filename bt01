# C_basic-HomeWork-Bai01Level01.c
#include "stdio.h"
#include"conio.h"
#include"math.h"
int main()
{
	float a,b,c,d;
	printf("nhap 3 canh tam giac");
	scanf("%f%f%f",&a,&b,&c);
	if ((a+b)>c&&(a+c)>b&&(c+b)>a)
	{
	d= (a+b+c)/2	;
	printf("chu vi la %f",d*2);
	printf("\n dien tich la %f", sqrt(d*(d-a)*(d-b)*(d-c)));}
	else 
	printf("nhap sai cmnr");
	getch();
}
