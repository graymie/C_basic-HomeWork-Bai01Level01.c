#include "stdio.h"
#include"conio.h"
#include"math.h"
int main()
{
	int a,d;
	
	printf("nhap so giay");
	scanf("%d",&a);
	d= a/60;
	if (a>=60)
	{
	if (d>=60)
	printf(" \n %d gio,%d phut,%d giay",d/60,d%60,a%60);
	else printf(" %d phut,%d giay",d, a%60);
	}
	else printf("%d giay",a);
	
	getch();}
	
